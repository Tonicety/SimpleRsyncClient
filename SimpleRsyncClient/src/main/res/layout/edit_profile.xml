<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">

    <View android:layout_height="30px"
        android:layout_width="match_parent"
        android:id="@+id/separator1"
        android:layout_row="0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Profile Name"
        android:id="@+id/textView2"
        android:layout_row="1"
        android:layout_column="0" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profileNameText"
        android:layout_row="2"
        android:layout_column="0" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_row="3"
        android:layout_column="0">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="IP Address"
            android:id="@+id/textView3"
            android:singleLine="true"
            android:layout_column="0"
            android:layout_weight="0.7"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Port"
            android:id="@+id/textView4"
            android:layout_column="1"
            android:layout_weight="0.3"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_row="4"
        android:layout_column="0">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ipAddressText"
            android:layout_weight="0.7"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/portText" />
    </TableRow>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Username"
        android:id="@+id/textView5"
        android:layout_row="5"
        android:layout_column="0" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userNameText"
        android:layout_row="6"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Remote Path"
        android:id="@+id/textView9"
        android:layout_row="7"
        android:layout_column="0" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/remotePathText"
        android:layout_row="8"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Local Path"
        android:id="@+id/textView10"
        android:layout_row="9"
        android:layout_column="0" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_row="10"
        android:layout_column="0">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/localPathText"
            android:layout_weight="0.64"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose"
            android:id="@+id/chooseLocalPathButton" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_row="11"
        android:layout_column="0">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Private Key File"
            android:id="@+id/textView6"
            android:layout_weight="0.64"/>
        <CheckBox
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Prompt Password"
            android:visibility="gone"
            android:id="@+id/usePasswordCheckBox"
            android:layout_width="160dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_row="12"
        android:layout_column="0">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/privateKeyFileText"
            android:layout_weight="0.64" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose"
            android:id="@+id/chooseFileButton" />
    </TableRow>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Rsync Options"
        android:id="@+id/textView7"
        android:layout_row="13"
        android:layout_column="0" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/optionsText"
        android:layout_row="14"
        android:layout_column="0" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="15"
        android:layout_column="0">

        <Button
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/okButton"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/cancelButton" />
    </TableRow>

</GridLayout>